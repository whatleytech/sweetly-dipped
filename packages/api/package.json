{
  "name": "@sweetly-dipped/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "format": "prettier --check .",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@sweetly-dipped/config-eslint": "workspace:*",
    "@sweetly-dipped/config-ts": "workspace:*",
    "@sweetly-dipped/shared-types": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "prettier": "^3.4.2",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}

{
  "name": "@sweetly-dipped/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "nest build",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:generate:docker": "prisma generate",
    "db:push:docker": "prisma db push",
    "db:migrate:docker": "prisma migrate deploy",
    "db:seed:docker": "tsx prisma/seed.ts",
    "dev": "dotenv -e .env.local -- nest start --watch",
    "start": "node dist/main.js",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "format": "prettier --check .",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@prisma/client": "^6.18.0",
    "cors": "^2.8.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@sweetly-dipped/config-eslint": "workspace:*",
    "@sweetly-dipped/config-ts": "workspace:*",
    "@sweetly-dipped/shared-types": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.30.1",
    "prettier": "^3.4.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}
{
  "name": "@sweetly-dipped/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist coverage",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:seed:docker": "tsx prisma/seed.ts",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "dev": "dotenv -e .env.local -- nest start --watch",
    "format": "prettier --check .",
    "lint": "eslint .",
    "pretest:integration": "yarn db:test:setup",
    "start": "node dist/main.js",
    "test:cov": "jest --coverage",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:watch": "jest --watch",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@sweetly-dipped/config-eslint": "workspace:*",
    "@sweetly-dipped/config-ts": "workspace:*",
    "@sweetly-dipped/shared-types": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.30.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
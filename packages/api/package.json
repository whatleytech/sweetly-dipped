{
  "name": "@sweetly-dipped/api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "dev": "dotenv -e .env.local -- tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:service": "dotenv -e .env.local -- vitest run --config vitest.service.config.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --check .",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@sweetly-dipped/config-eslint": "workspace:*",
    "@sweetly-dipped/config-ts": "workspace:*",
    "@sweetly-dipped/shared-types": "workspace:*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.30.1",
    "prettier": "^3.4.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  }
}
{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "coverage/lcov.info"],
      "persistent": false,
      "env": ["DATABASE_URL", "DATABASE_URL_TEST", "NODE_ENV"]
    },
    "test:ui": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "test:headed": {
      "dependsOn": ["^build"],
      "persistent": false
    },
    "test:debug": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

{
  "name": "sweetly-dipped",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@sweetly-dipped/web",
    "dev:api": "turbo run dev --filter=@sweetly-dipped/api",
    "build": "turbo run build",
    "db:generate": "turbo run db:generate --filter=@sweetly-dipped/api",
    "db:push": "turbo run db:push --filter=@sweetly-dipped/api",
    "db:migrate": "turbo run db:migrate --filter=@sweetly-dipped/api",
    "db:studio": "turbo run db:studio --filter=@sweetly-dipped/api",
    "db:seed": "turbo run db:seed --filter=@sweetly-dipped/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:web": "turbo run test --filter=@sweetly-dipped/web",
    "test:api": "turbo run test --filter=@sweetly-dipped/api",
    "test:e2e": "turbo run test --filter=@sweetly-dipped/e2e",
    "test:e2e:ui": "turbo run test:ui --filter=@sweetly-dipped/e2e",
    "test:e2e:headed": "turbo run test:headed --filter=@sweetly-dipped/e2e",
    "test:e2e:debug": "turbo run test:debug --filter=@sweetly-dipped/e2e",
    "test:coverage": "turbo run test --filter=!./node_modules",
    "coverage:report": "npx c8 report --reporter=text --reporter=html --reporter=lcov",
    "coverage:global": "yarn test:coverage && node scripts/coverage.js",
    "coverage:merge": "node scripts/coverage.js",
    "coverage:html": "node scripts/generate-html-report.js",
    "coverage:full": "yarn coverage:global && yarn coverage:html",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:init": "yarn workspace @sweetly-dipped/deploy bootstrap",
    "deploy:setup": "yarn workspace @sweetly-dipped/deploy setup:services",
    "deploy:vars": "yarn workspace @sweetly-dipped/deploy vars:set",
    "deploy:api": "yarn workspace @sweetly-dipped/deploy deploy:api",
    "deploy:web": "yarn workspace @sweetly-dipped/deploy deploy:web",
    "deploy:all": "yarn workspace @sweetly-dipped/deploy deploy:all",
    "deploy:verify": "yarn workspace @sweetly-dipped/deploy verify",
    "logs:api": "yarn workspace @sweetly-dipped/deploy logs:api",
    "logs:web": "yarn workspace @sweetly-dipped/deploy logs:web",
    "logs:api:follow": "yarn workspace @sweetly-dipped/deploy logs:api:follow",
    "logs:web:follow": "yarn workspace @sweetly-dipped/deploy logs:web:follow",
    "railway:status": "yarn workspace @sweetly-dipped/deploy status",
    "db:migrate:prod": "yarn workspace @sweetly-dipped/deploy db:migrate",
    "db:seed:prod": "yarn workspace @sweetly-dipped/deploy db:seed"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "packageManager": "yarn@4.9.4"
}
